---
import Layout from "/Users/rdobbie/Desktop/website/src/layouts/Layout.astro";
import { Image } from "astro:assets";
import GeethaBalakrishn from '/public/core_team/GeethaBalakrishnan.png';
import HarriHarding from '/public/core_team/HarriHarding.jpg';
import HayleyChan from '/public/core_team/HayleyChan.jpg';
import KateRichards from '/public/core_team/KateRichards.jpg'; 
import SarahHomeh from '/public/core_team/SarahHomeh.jpg';
---
<Layout>
    <div class="w-full flex flex-col items-center justify-center p-8 gap-4">
        <h2 class="text-4xl p-4 uppercase">Core Team</h2>

 
        <div class="flex items-center gap-10">
 
            <div class="flex flex-col items-center gap-1"> 
                <div class="w-[300px] h-[160px] flex flex-col rounded-full items-center justify-center overflow-hidden">
                    <Image
                        src={GeethaBalakrishn}
                        alt="Geetha Balakrishn" 
                        class="w-full h-full object-cover"
                        style="object-position: 100% 30%"
                        width="300"
                        height="150" />
                </div>
                <h3 class="mt-4 text-center text-xl">Geetha Balakrishnan</h3>
            </div>

            <div class="flex flex-col items-center gap-1"> 
                <div class="w-[300px] h-[160px] rounded-full flex items-center justify-center overflow-hidden">
                    <Image
                        src={HarriHarding}
                        alt="Harri Harding" 
                        class="w-full h-full object-cover"
                        style="object-position: 100% 100%"
                        width="300"
                        height="150"/>
                </div>
                <h3 class="mt-4 text-center text-xl">Harri Harding</h3>
            </div>

            <div class="flex flex-col items-center gap-1"> 
                <div class="w-[300px] h-[160px] rounded-full flex items-center justify-center overflow-hidden">
                    <Image
                        src={HayleyChan}
                        alt="Haley Chan" 
                        class="w-full h-full object-cover" 
                        style="object-position: 90% 20%"
                        width="300"
                        height="150"/>
                </div>
                <h3 class="mt-4 text-center text-xl">Hayley Chan</h3>
            </div>
        </div>


        <div class="flex gap-8">
            <div class="flex flex-col items-center gap-1"> 
                <div class="w-[300px] h-[160px] rounded-full flex items-center justify-center overflow-hidden">
                    <Image
                        src={KateRichards}
                        alt="Kate Richards" 
                        class="w-full h-full object-cover"
                        style="object-position: 10% 10%"
                        width="300"
                        height="150" />
                </div>
                <h3 class="mt-4 text-center text-xl">Kate Richards</h3>
            </div>
            <div class="flex flex-col items-center gap-1"> 
                <div class="w-[300px] h-[160px] rounded-full flex items-center justify-center overflow-hidden">
                    <Image
                        src={SarahHomeh}
                        alt="Sarah Homeh" 
                        class="w-full h-full object-cover" 
                        style="object-position: 100% 10%"
                        width="300"
                        height="150"/>
                </div>
                <h3 class="mt-4 text-center text-xl">Sarah Homeh</h3>
            </div>
        </div>
    </div>

        
    </div>
</Layout>