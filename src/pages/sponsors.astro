---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import creativeAustralia from "../assets/images/logos/creativeAus.webp";
import citySyd from "../assets/images/logos/cityOfSyd.webp";
import heapsNormal from "../assets/images/logos/HN.webp";
import beardedTit from "../assets/images/logos/BT.webp";
---

<Layout>
    <div
        class="w-max-screen w-full flex flex-col items-center justify-center p-8 gap-4"
    >
        <div class="flex flex-col md:flex-row justify-between p-6 gap-8">
            <Image
                src={creativeAustralia}
                alt="Logo of Creative Australia"
                class="p-4"
                loading="eager"
                width="300"
                height="300"
            />
            <Image
                src={citySyd}
                alt="Logo of City of Sydney"
                class="p-4"
                loading="eager"
                width="400"
                height="200"
            />
        </div>
        <Image
            src={heapsNormal}
            alt="Logo of Heaps Normal"
            class=""
            loading="eager"
            width="150"
            height="150"
        />
        <Image
            src={beardedTit}
            alt="Logo of The Bearded Tit"
            class="m-10"
            loading="eager"
            width="400"
            height="400"
        />
        <p class="flex justify-center">Keen to become a sponsor?</p>
        <div class="flex justify-center">
            <button
                type="submit"
                class="bg-pink text-offwhite px-6 py-2 rounded-lg hover:bg-dark-pink focus:outline-none uppercase"
            >
                <a
                    href="../../public/Partnership-Opportunities-2025.pdf"
                    rel="nofollow noopener noreferrer"
                    referrerpolicy="no-referrer"
                    download
                    class="font-semibold pdf-link"
                    >Download our partnership document
                </a>
            </button>
        </div>
    </div>
</Layout>
