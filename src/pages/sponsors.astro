---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div
        class="w-max-screen w-full flex flex-col items-center justify-center p-8 gap-4"
    >
        <div class="flex flex-col md:flex-row justify-between p-6 gap-8">
            <Image
                src="/src/assets/creativeAus.png"
                alt="Logo of Creative Australia"
                class="p-4"
                loading="eager"
                width="300"
                height="300"
            />
            <Image
                src="/src/assets/cityOfSyd.png"
                alt="Logo of City of Sydney"
                class="p-4"
                loading="eager"
                width="400"
                height="200"
            />
        </div>
        <Image
            src="/src/assets/HN.png"
            alt="Logo of Heaps Normal"
            class=""
            loading="eager"
            width="150"
            height="150"
        />
        <Image
            src="/src/assets/BT.png"
            alt="Logo of The Bearded Tit"
            class="m-10"
            loading="eager"
            width="400"
            height="400"
        />
        <div class="flex flex-col justify-center text-center">
            <p class="flex justify-center">Keen to become our sponsor?</p>
            <a
                href="/path/to/file.pdf"
                rel="nofollow noopener noreferrer"
                referrerpolicy="no-referrer"
                download="filename.pdf"
                class="font-semibold pdf-link"
                >Download our partnership document
            </a>
        </div>
        <div class="flex justify-center">
            <button
                type="submit"
                class="bg-pink text-offwhite px-6 py-2 rounded-lg hover:bg-dark-pink focus:outline-none uppercase"
            >
                Get in touch with us
            </button>
        </div>
    </div>
</Layout>
