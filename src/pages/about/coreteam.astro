---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import GeethaBalakrishnan from "../../assets/images/core_team/GeethaBalakrishnan.webp";
import HarriHarding from "../../assets/images/core_team/HarriHarding.webp";
import HayleyChan from "../../assets/images/core_team/HayleyChan.webp";
import KateRichards from "../../assets/images/core_team/KateRichards.webp";
import SarahHomeh from "../../assets/images/core_team/SarahHomeh.webp";
---

<Layout>
    <h2 class="max-w-screen text-4xl p-4 text-center uppercase">Core Team</h2>
    <div
        class="flex flex-row justify-center p-8 gap-10 md:gap-28 overflow-hidden flex-wrap"
    >
        <div class="flex flex-col items-center gap-1">
            <div
                class="lg:w-96 lg:h-64 w-66 h-44 flex flex-col rounded-full items-center justify-center overflow-hidden"
            >
                <div
                    class="w-full h-full object-cover grayscale hover:filter-none"
                >
                    <Image src={GeethaBalakrishnan} alt="Geetha Balakrishnan"/>
                </div>
            </div>
            <p class="text-center sm:text-base md:text-lg lg:text-xl">
                Geetha Balakrishnan
            </p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <div
                class="lg:w-96 lg:h-64 w-66 h-44 rounded-full flex items-center justify-center overflow-hidden"
            >
                <div
                    class="w-full h-full object-cover grayscale hover:filter-none"
                >
                    <Image src={SarahHomeh} alt="Sarah Homeh" />
                </div>
            </div>
            <p class="text-center sm:text-base md:text-lg lg:text-xl">
                Sarah Homeh
            </p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <div
                class="lg:w-96 lg:h-64 w-66 h-44 rounded-full flex items-center justify-center overflow-hidden"
            >
                <div
                    class="w-full h-full object-cover grayscale hover:filter-none"
                >
                    <Image src={HarriHarding} alt="Harri Harding" />
                </div>
            </div>
            <p class="text-center sm:text-base md:text-lg lg:text-xl">
                Harri Harding
            </p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <div
                class="lg:w-96 lg:h-64 w-66 h-44 rounded-full flex items-center justify-center overflow-hidden"
            >
                <div
                    class="w-full h-full object-cover grayscale hover:filter-none"
                >
                    <Image src={HayleyChan} alt="Haley Chan" />
                </div>
            </div>
            <p class="text-center sm:text-base md:text-lg lg:text-xl">
                Hayley Chan
            </p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <div
                class="lg:w-96 lg:h-64 w-66 h-44 rounded-full flex items-center justify-center overflow-hidden"
            >
                <div
                    class="w-full h-full object-cover grayscale hover:filter-none"
                >
                    <Image
                        src={KateRichards}
                        alt="Kate Richards"
                    />
                </div>
            </div>
            <p class="text-center sm:text-base md:text-lg lg:text-xl">
                Kate Richards (2024)
            </p>
        </div>
    </div>
</Layout>
